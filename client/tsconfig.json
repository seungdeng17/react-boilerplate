{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@asset/*": ["src/asset/*"],
      "@components/*": ["src/components/*"],
      "@constant/*": ["src/constant/*"],
      "@hook/*": ["src/hook/*"],
      "@store/*": ["src/store/*"],
      "@style/*": ["src/style/*"],
      "@util/*": ["src/util/*"]
    }
  },
  // "include": ["./src/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "./dist/**/*"]
}
